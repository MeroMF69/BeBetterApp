<Window x:Class="BeBetterApp.Kalorienzähler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Kalorienzähler" Height="450" Width="800"  Background ="#FF1B1446"
        WindowStyle="none"
        WindowState="Maximized">

    <Window.Resources>
        <Style x:Key="roundMenuButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                      CornerRadius="20"
                      Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="15"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <lvc:CartesianChart Series="{Binding Series}"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}" />

        <Button Grid.Row="4"
      Content="Zurück"
      HorizontalAlignment="Left"
      VerticalAlignment="Bottom"
      Margin="10"
      Width="200"
      Height="60"
      FontSize="20"
      Click="Button_zurück_Click"
      Style="{StaticResource roundMenuButton}"/>

        <Button Grid.Row="4"
      Content="kcal hinz."
      HorizontalAlignment="Right"
      VerticalAlignment="Bottom"
      Margin="10"
      Width="200"
      Height="60"
      FontSize="20"
      Click="Button_Tagadden_Click"
      Style="{StaticResource roundMenuButton}"/>
       
    </Grid>
</Window>
