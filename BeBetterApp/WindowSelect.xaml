<Window x:Class="BeBetterApp.WindowSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeBetterApp"
        mc:Ignorable="d"
        Title="WindowSelect" Height="700" Width="1300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Einzelne Körpterteile trainieren" Width="550" Height="140" Margin="70" FontSize="38"/>
            <Button Content="Erstelle einen Fitnessplan" Width="550" Height="140" FontSize="40"/>
        </StackPanel>
        <TextBlock x:Name="Textblock_Text"
           Text="hallo"
           TextWrapping="Wrap"
           FontSize="20"
           Margin="30"
           Width="800"
           Height="300"
           HorizontalAlignment="Center"
           VerticalAlignment="Bottom"
           Background="LightGray"
           Padding="10"/>
    </Grid>
</Window>
