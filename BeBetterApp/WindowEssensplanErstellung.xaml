<Window x:Class="BeBetterApp.WindowEssensplanErstellung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeBetterApp"
        mc:Ignorable="d"
        Title="WindowEssensplanErstellung" Height="450" Width="800" Background ="#FF1B1446"
        WindowStyle="none"
        WindowState="Maximized"
        >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label Content="Gewicht:" Height="30" Width="80" Foreground="White" Margin="5" FontSize="15"></Label>
            <TextBox x:Name="Gewicht" Height="50" Width="150" Grid.Row="0" Text="Gewicht" FontSize="31" Background="#FF1B1446" Foreground="White" GotFocus="Gewicht_GotFocus" Margin="5" />
            <Label Content="Größe:" Height="30" Width="60" Foreground="White" Margin="5" FontSize="15" ></Label>
            <TextBox x:Name="Größe" Height="50" Width="150" Grid.Row="0" Background="#FF1B1446" Foreground="White" Margin="5"  />
            <ComboBox x:Name="preferänz" Height="50" Width="150" Grid.Row="0" Background="#FF1B1446" Foreground="White" Margin="5">
                <ComboBoxItem Content="abnehmen"></ComboBoxItem>
                <ComboBoxItem Content="muskelaufbau"></ComboBoxItem>
            </ComboBox>
            <Button Margin="5" Content="Erstellen" HorizontalAlignment="Left" Grid.Row="0"  Height="50" Width="150" Click="Button_Click" Background="#FF1B1446" Foreground="White"/>
        </StackPanel>

        <TextBox x:Name="Ausgabe" HorizontalAlignment="Center" Grid.Row="1"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="660" Height="288" Background="#FF1B1446" Foreground="White"  />

    </Grid>
</Window>
